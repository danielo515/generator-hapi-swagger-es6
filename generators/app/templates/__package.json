{
  "name": "<%- service.name.toLowerCase() %>",
  "version": "0.0.1",
  "description": "<%- service.description %>",
  "scripts": {
  <% if(useDocker){ -%>
    "build": "cross-var docker build . -t $npm_package_config_imageName:$npm_package_version -t $npm_package_config_imageName:latest",
    "docker-push": "cross-var docker push $npm_package_config_imageName:$npm_package_version && docker push $npm_package_config_imageName:latest",
    "deploy": "npm run build && npm run docker-push",
  <% } -%>
    "test": "lab -a code -t 100 -v",
    "test-cov-html": "lab -a code -r html -o coverage.html",
    "start": "node lib/start.js",
    "start:dev": "nodemon --inspect lib/start.js"
  },
  "main": "lib/index.js",
  "author": {
    "name": "<%- author.fullName %>"
  },
  "keywords": [
    "rest",
    "hapi"
  ],
  "private": true,
  <% if(useDocker){ -%>
    "config": {
      "imageName": "<%- service.name %>"
    },
  <% } -%>
  "dependencies": {
    "boom": "^4.3.1",
    "chalk": "^2.1.0",
    "getconfig": "^3.1.0",
    "glue": "^4.2.0",
    "good": "^7.3.0",
    "good-console": "^6.4.0",
    "good-squeeze": "^5.0.2",
    "hapi": "^16.6.2",
    <% if(useAuthentication){ -%>
      "hapi-auth-jwt2": "^7.3.0",
      "jsonwebtoken": "^7.1.9",
      "bcrypt": "^1.0.3",
    <% } -%>
    "hapi-swagger": "^7.8.1",
    "hoek": "5.0.0",
    "inert": "^4.2.1",
    "joi": "^11.1.1",
    "lout": "^10.0.3",
		"mongodb": "^2.2.31",
    "vision": "^4.1.1"
  },
  "devDependencies": {
    "cross-var": "^1.0.3",
    "eslint": "^4.8.0",
    "eslint-config-hapi": "^10.1.0",
    "eslint-plugin-hapi": "^4.0.0",
    "lab": "^14.3.1",
    "nodemon": "^1.12.1"
  }
}